<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="414dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:text="Game Over"
        android:textColorLink="#3F51B5"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFinalLevel1"
        android:layout_width="403dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:text="Level 1 :"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewFinalLevel2"
        android:layout_width="408dp"
        android:layout_height="66dp"
        android:layout_marginTop="44dp"
        android:text="Level 2 :"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFinalLevel1" />

    <TextView
        android:id="@+id/textViewTotalScore"
        android:layout_width="404dp"
        android:layout_height="79dp"
        android:layout_marginTop="52dp"
        android:text="Total Score :"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFinalLevel2" />
</androidx.constraintlayout.widget.ConstraintLayout>